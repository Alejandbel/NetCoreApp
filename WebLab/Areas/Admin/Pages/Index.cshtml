@page
@model IndexModel

@{
	ViewData["Title"] = "Index";
}
<p>
	<a class="btn btn-primary" asp-page="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Beer.Items[0].Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Beer.Items[0].Description)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Beer.Items[0].Price)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Beer.Items[0].ImagePath)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Beer.Items[0].Type)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Beer.Items)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Price)
				</td>
				<td>
					<img src="@item.ImagePath" class="card-img-top" style="object-fit: contain; height: 150px;" alt="beer">
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Type.Name)
				</td>
				<td>
					<a class="btn btn-success" asp-page="./Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i> Edit</a><br>
					<a class="btn btn-info" asp-page="./Details" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i> Details</a><br>
					<a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i> Delete</a><br>
				</td>
			</tr>
		}
	</tbody>
</table>
<nav>
	<Pager current-page="@Model.Beer.CurrentPage" total-pages="@Model.Beer.TotalPages" admin></Pager>
</nav>
